{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
      "source" : "**/@(main|polyfills|runtime).*.js",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=31536000"
      } ]
    },
    {
      "source": "**/styles.*.css",
      "headers": [ {
        "key" : "Cache-Control",
        "value" : "max-age=31536000"
      } ]
    } ]
  }
}
